@model Moodeng.AspNetUser

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

<div class="min-h-screen bg-gray-50 p-6">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Edit User</h2>
        <a href="@Url.Action("Index", "AdminManageUser")" 
           class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors">
            Back to List
        </a>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="bg-white rounded-xl shadow-lg p-6">
            @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-4" })

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Username</label>
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-red-500 text-sm mt-1" })
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-red-500 text-sm mt-1" })
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-red-500 text-sm mt-1" })
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Role</label>
                    @Html.DropDownListFor(model => model.Role, 
                        new SelectList(new[] { "User", "Shop Owner", "Admin" }), 
                        "Select Role",
                        new { @class = "w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" })
                    @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-red-500 text-sm mt-1" })
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Account Status</label>
                    <div class="mt-2">
                        <label class="inline-flex items-center">
                            @Html.CheckBoxFor(model => model.LockoutEnabled, new { @class = "rounded border-gray-300 text-blue-600 focus:ring-blue-500" })
                            <span class="ml-2 text-gray-700">Account Enabled</span>
                        </label>
                    </div>
                </div>
            </div>

            <div class="mt-6 flex justify-end space-x-3">
                <a href="@Url.Action("Index", "AdminManageUser")" 
                   class="px-6 py-2.5 bg-white border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    Cancel
                </a>
                <button type="submit" 
                        class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    Save Changes
                </button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
