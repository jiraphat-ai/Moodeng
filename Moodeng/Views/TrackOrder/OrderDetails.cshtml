
@model Moodeng.Order

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Order Details</h1>

<div class="container mt-5">
    <h3>Order ID: @Model.OrderId</h3>
    <p>Order Date: @string.Format("{0:yyyy-MM-dd}", Model.OrderDate)</p>
    <p>Status: @Model.OrderStatus</p>
    <p>Total Amount: @Model.OrderDetails.Sum(od => od.TotalPrice)</p>

    <h4>Items in this Order:</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Index", "TrackOrder")" class="btn btn-secondary">Back to Orders</a>
</div>
